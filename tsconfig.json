{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": [
    "bin/**/*.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "db/**/*.ts",
    "app.ts",
    "types/**/*.d.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
